{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "cheesecake": {
            "$ref": "#/definitions/recipeListing"
        }
    },
    "required": [
        "cheesecake"
    ],
    "definitions": {
        "children": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/recipeListing"
            }
        },
        "recipeListing":{
            "type": "object",
            "oneOf": [
                {
                    "$ref": "#/definitions/recipe_label"
                },
                {
                    "$ref": "#/definitions/recipe_container"
                },
                {
                    "$ref": "#/definitions/recipe_horizontallist"
                },
                {
                    "$ref": "#/definitions/recipe_verticallist"
                },
                {
                    "$ref": "#/definitions/recipe_button"
                },
                {
                    "$ref": "#/definitions/recipe_textbutton"
                },
                {
                    "$ref": "#/definitions/recipe_image"
                },
                {
                    "$ref": "#/definitions/recipe_carousel"
                }

            ]
        },
        "recipe_image": {
            "type": "object",
            "properties": {
                "recipeName": {
                    "type": "string",
                    "enum": ["image"]
                },
                "source": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "cssClasses": {
                    "$ref": "#/definitions/cssClasses"
                }
            },
            "required": [
                "recipeName",
                "source"
            ],
            "additionalProperties": false
        },
        "recipe_label": {
            "type": "object",
            "properties": {
                "recipeName": {
                    "type": "string",
                    "enum": ["label"]
                },
                "text": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "cssClasses": {
                    "$ref": "#/definitions/cssClasses"
                }
            },
            "required": [
                "recipeName",
                "text"
            ],
            "additionalProperties": false
        },
        "recipe_container": {
            "type": "object",
            "properties": {
                "recipeName": {
                    "type": "string",
                    "enum": [ "container"]
                },
                "id": {
                    "type": "string"
                },
                "cssClasses": {
                    "$ref": "#/definitions/cssClasses"
                },
                "actions": {
                    "$ref": "#/definitions/actions"
                },
                "children": {
                    "$ref": "#/definitions/children"
                }
            },
            "required": [
                "recipeName",
                "children"
            ],
            "additionalProperties": false
        },
        "recipe_horizontallist": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "recipeName": {
                    "type": "string",
                    "enum": [
                        "horizontallist"
                    ]
                },
                "actions": {
                    "$ref": "#/definitions/actions"
                },
                "cssClasses": {
                    "$ref": "#/definitions/cssClasses"
                },
                "children": {
                    "$ref": "#/definitions/children"
                }
            },
            "required": [
                "recipeName",
                "children"
            ],
            "additionalProperties": false
        },
        "recipe_verticallist": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "recipeName": {
                    "type": "string",
                    "enum": [
                        "verticallist"
                    ]
                },
                "actions": {
                    "$ref": "#/definitions/actions"
                },
                "cssClasses": {
                    "$ref": "#/definitions/cssClasses"
                },
                "children": {
                    "$ref": "#/definitions/children"
                }
            },
            "required": [
                "recipeName",
                "children"
            ],
            "additionalProperties": false
        },
        "recipe_button": {
            "type": "object",
            "properties": {
                "recipeName": {
                    "type": "string",
                    "enum": [ "button"]
                },
                "id": {
                    "type": "string"
                },
                "cssClasses": {
                    "$ref": "#/definitions/cssClasses"
                },
                "actions": {
                    "$ref": "#/definitions/actions"
                },
                "children": {
                    "$ref": "#/definitions/children"
                }
            },
            "required": [
                "recipeName"
            ],
            "additionalProperties": false
        },
        "recipe_textbutton": {
            "type": "object",
            "properties": {
                "recipeName": {
                    "type": "string",
                    "enum": [ "textbutton"]
                },
                "text": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "cssClasses": {
                    "$ref": "#/definitions/cssClasses"
                },
                "actions": {
                    "$ref": "#/definitions/actions"
                }
            },
            "required": [
                "recipeName",
                "text"
            ],
            "additionalProperties": false
        },
        "recipe_carousel": {
            "type": "object",
            "properties": {
                "recipeName": {
                    "type": "string",
                    "enum": [ "carousel"]
                },
                "orientation":{
                    "type": "string",
                    "enum": [ "horizontal", "vertical"]
                },
                "id": {
                    "type": "string"
                },
                "actions": {
                    "$ref": "#/definitions/actions"
                },
                "cssClasses": {
                    "$ref": "#/definitions/cssClasses"
                },
                "children": {
                    "$ref": "#/definitions/children"
                }
            },
            "required": [
                "recipeName",
                "children"
            ],
            "additionalProperties": false
        },
        "cssClasses": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string",
                "minLength": 1
            }
        },
        "actions": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "oneOf": [
                    {
                        "$ref": "#/definitions/action_exitapp"
                    },
                    {
                        "$ref": "#/definitions/action_launchapp"
                    }
                ]
            }
        },
        "action_exitapp": {
            "type": "object",
            "properties": {
                "eventType": {
                    "type": "string",
                    "minLength": 1
                },
                "command": {
                    "type": "string",
                    "enum": [ "exitApp"]
                },
                "stat":{
                    "type": "object",
                    "additionalProperties": true
                }
            },
            "additionalProperties": false,
            "required": [
                "eventType",
                "command"
            ]
        },
        "action_launchapp": {
            "type": "object",
            "properties": {
                "eventType": {
                    "type": "string",
                    "minLength": 1
                },
                "command": {
                    "type": "string",
                    "enum": [ "launchApp"]
                },
                "parameters":{
                    "type": "object",
                    "properties": {
                        "url": {
                            "type": "string",
                            "minLength": 1
                        },
                        "data": {
                            "type": "object",
                            "additionalProperties": true
                        },
                        "route": {
                            "type": "array",
                            "items": { "type": "string" }
                        },
                        "overwrite":{
                            "type": "boolean"
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "url"
                    ]
                },
                "stat":{
                    "type": "object",
                    "additionalProperties": true
                }
            },
            "additionalProperties": false,
            "required": [
                "eventType",
                "command",
                "parameters"
            ]
        }
    }
}